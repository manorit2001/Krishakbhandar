<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/listimagewarehouse"
                android:layout_width="100dp"
                android:layout_marginRight="@dimen/sign_up_gap"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/person1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listnamewarehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:text="Warehouse Name"
                    android:textAlignment="viewStart"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="7dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_small_dot" />

                <TextView
                    android:id="@+id/listdistwarehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Warehouse Distance"

                    android:textColor="@color/color1"
                    android:textStyle="bold|italic" />
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic" />
                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivContactItem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_phone_black" />

                    <TextView
                        android:id="@+id/listlocwarehouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.5"
                        android:text="Warehouse Ph. No."
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>