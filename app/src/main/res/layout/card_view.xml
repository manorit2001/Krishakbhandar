<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/listimagewarehouse"
                android:layout_width="100dp"
                android:layout_marginRight="@dimen/sign_up_gap"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/person1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listnamewarehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:text="Warehouse Name"
                    android:textAlignment="viewStart"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/listdistwarehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Warehouse Distance"

                    android:textColor="@color/color1"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/listlocwarehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warehouse Location"
                    android:textAlignment="center"
                    android:textColor="@color/color2"
                    android:alpha="0.5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>